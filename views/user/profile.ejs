<% layout('frontend/layouts/boilerplate') -%>

<main>
  <!-- SIDEBAR -->

  <%- include('./Layouts/sidebar') %>

  <!-- PROFILE -->
  <div class="main-content">
    <div class="container">
      <div class="user-details">
        <div class="user-card">
          <div class="my-profile">
            <img
              class="avatar"
              src="https://res.cloudinary.com/drx2gahpl/image/upload/v1717342329/Learnodisha/Avatars/tnpwgw5zdvdstyuygamd.png"
              alt=""
            />
            <h2>My Profile</h2>
          </div>
          <div>
            <button class="delete-account">
              <i class="fa-solid fa-trash"></i> Delete Account
            </button>
          </div>
          <!-- Delete Model -->
          <div class="overlay"></div>
          <div class="delete-model">
            <div class="popup">
              <div>
                <h4>Delete</h4>
                <i class="fa-solid fa-xmark closeModel"></i>
              </div>
              <span
                ><h2>Are you sure you want to delete account?</h2>
                <p>This action is permanent and cannot be undone.</p></span
              >
              <div>
                <button id="delete-confirm">Delete</button>
                <button id="delete-cancel">Cancel</button>
              </div>
            </div>
          </div>
          <!-- Delete Model End -->
        </div>
        <!-- User Details -->
        <div class="user-data">
          <form action="">
            <div class="field">
              <label for="fullname">You Name</label>
              <input type="text" id="name" value="" disabled />
            </div>
            <div class="field">
              <label for="fullname">Email</label>
              <input type="email" id="email" value="" disabled />
            </div>
            <div class="field">
              <label for="fullname">Created on</label>
              <input type="text" id="date" value="" disabled />
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- FOOTR -->
    <%- include('../frontend/layouts/footer') %>
  </div>
</main>
