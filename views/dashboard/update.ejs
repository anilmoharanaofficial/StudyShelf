<% layout('dashboard/layouts/boilerplate') -%>

<main>
  <!-- SIDEBAR -->
  <%- include('./layouts/sidebar') %>

  <div class="main-content">
    <div class="container">
      <form action="" id="update-book" enctype="multipart/form-data">
        <!-- Header -->
        <div class="form-header">
          <div>
            <h1>Update Book</h1>
            <p>Update The Books & Syllabus</p>
          </div>
          <button type="submit">
            <i class="fa-solid fa-pen-to-square"></i> Update
          </button>
        </div>
        <!-- Form Container 1-->
        <div class="form-container-1">
          <div class="form-container-right">
            <div class="field">
              <div class="form-group">
                <label for="bookName">Titile</label>
                <input
                  type="text"
                  id="bookName"
                  name="bookName"
                  required
                  minlength="10"
                  maxlength="60"
                />
              </div>
              <div class="form-group">
                <label for="description">Description</label>
                <textarea
                  id="description"
                  name="description"
                  required
                  minlength="50"
                  maxlength="500"
                ></textarea>
              </div>
            </div>
          </div>
          <div class="form-container-left">
            <div class="field">
              <div class="form-group">
                <label for="className">Classes</label>
                <select id="className" name="className" required>
                  <option value="">Select Class</option>
                  <option value="Class 1">Class 1</option>
                  <option value="Class 2">Class 2</option>
                  <option value="Class 3">Class 3</option>
                  <option value="Class 4">Class 4</option>
                  <option value="Class 5">Class 5</option>
                  <option value="Class 6">Class 6</option>
                  <option value="Class 7">Class 7</option>
                  <option value="Class 8">Class 8</option>
                  <option value="Class 9">Class 9</option>
                  <option value="Class 10">Class 10</option>
                  <option value="Class 11">Class 11</option>
                  <option value="Class 12">Class 12</option>
                </select>
              </div>
              <div class="form-group">
                <label for="language">Language</label>
                <select id="language" name="language" required>
                  <option value="">Select language</option>
                  <option value="Odia">Odia</option>
                  <option value="English">English</option>
                  <option value="Hindi">Hindi</option>
                  <option value="Hinglish">Hinglish</option>
                </select>
              </div>
              <div class="form-group">
                <label for="publishYear">Publish Year</label>
                <input type="text" id="publishYear" name="publishYear" />
              </div>
              <div class="form-group">
                <label for="publisher">Publisher</label>
                <input type="text" id="publisher" name="publisher" />
              </div>
              <div class="form-group">
                <label for="category">Category</label>
                <select id="category" name="category" required>
                  <option value="">Select Category</option>
                  <option value="Textbook">Textbook</option>
                  <option value="Syllabus">Syllabus</option>
                  <option value="Note">Note</option>
                </select>
              </div>
            </div>
          </div>
        </div>
        <!-- Form Container 2-->
        <div class="form-container-1">
          <div class="form-container-right">
            <div class="field">
              <div class="form-group">
                <label for="coverImage">Upload Image</label>
                <input
                  type="file"
                  accept="image/*"
                  id="coverImage"
                  name="coverImage"
                />
              </div>
              <!-- <div class="featured-image">
                <div>
                  <input
                    type="file"
                    id="coverImage"
                    accept="image/*"
                    onchange="previewImage(event)"
                  />
                  <img
                    id="featuredImagePreview"
                    src="https://buffer.com/library/content/images/size/w1200/2023/10/free-images.jpg"
                    alt=""
                    height="200px"
                  />
                </div>
                <div>
                  <label id="coverImage" for="coverImage" class="featuredImage">
                    <i class="fa fa-plus"></i>
                    <span>Add Image</span>
                  </label>
                </div>
              </div> -->
            </div>
          </div>
          <div class="form-container-left">
            <div class="field">
              <div class="form-group">
                <label for="bookFiles">Upload Files</label>
                <input type="file" id="bookFiles" name="bookFiles" />
              </div>
              <!-- <div class="form-group">
                <label for="publisher">File Link (Optional)</label>
                <input type="text" id="fileLink" name="fileLink" />
              </div> -->
            </div>
          </div>
        </div>
      </form>
    </div>
    <!-- FOOTR STARTS HERE -->
    <%- include('../dashboard/layouts/footer') %>
  </div>
</main>
